extends layout

block content
	div.blue-container
		// display the detail of the first item
		- var item = restaurant
		- var address = item.full_address
		img(width='500' src='http://www.germainmontreal.com/assets/18fae33e35e64a858756a513008807d2_RestaurantLR2_Crop.jpg')
		h4.right-side= item.stars + " Stars"
		h3= item.name
		div.right-side
			h4= "Hours"
			div.white-container
				for val, key in item.hours
					= key + ": " + val.open + " - " + val.close
					br
		for parts in item.full_address.split('\n')
			= parts
			br

		br
		br


		h5= "Price Range: " + item.attributes["Price Range"]
		h5= "Takes Reservations: " + item.attributes["Takes Reservations"]
		h5= "Delivery: " + item.attributes["Delivery"]

