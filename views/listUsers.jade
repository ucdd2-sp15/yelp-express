extends layout.jade
block content
    table.u-full-width
        thead
            tr
                th Name
                th Reviews
                th Yelping Since
        tbody
        each item in users
            tr
                td(width="70%")
                   b
                    a(href='/view/user/' + item.user_id)
                      = item.name
                td= item.review_count
                td= item.yelping_since