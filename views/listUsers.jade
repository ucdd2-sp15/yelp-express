extends layout.jade

// TODO: use the better template from the hackathon
block content
    div#example-grid
        div.row
            div.two.columns 
                b Name
            div.two.columns 
                b Average Rating
        div.row
    each item in users
        div.row
            div.two.columns 
                a(href='/view/user/'+item.user_id)
                    = item.name
            div.two.columns
                = item.average_stars.toFixed(2)

