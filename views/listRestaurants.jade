extends layout.jade

block content
	div.row
		div.four.columns
			br
		div.six.columns
			br
			h3 Restaurants
			br
			
	each item in restaurants    
		div.row
			div.two.columns
				img(src='/images/rest.png')
			div.four.columns
				a(href='/view/restaurant/'+item.business_id)
					h5= item.name
			div.three.columns
				=item.city+', '+item.state
			div.two.columns(style='color: red')
				= item.stars+ " Stars"


