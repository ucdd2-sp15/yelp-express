extends layout.jade

block content
	div.row
		div.four.columns
			br
		div.six.columns
			br
			h3="Doctors"
			br
	each item in doctors
		div.row
			div.two.columns
				img(src='/images/doctor_list.png')
			div.four.columns
				a(href='/view/doctor/'+item.business_id)
					h5= item.name
			div.three.columns
				=item.city +', '+item.state
			div.two.columns(style='color: red;font-weight:bold')
				= item.stars+ " Stars"
