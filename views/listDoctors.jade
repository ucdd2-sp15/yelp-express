extends layout.jade

block content
    div.row
        div.five.columns
            strong= "Name"
        div.two.columns
            strong= "City"
        div.one.columns
            strong= "State"
        div.one.columns
            strong= "Stars"
        div.three.columns
            strong= "Appointment Required?"
    each item in doctors 
        div.row
            div.five.columns
                a(href='/view/doctor/' + item.business_id)
                    = item.name
            div.two.columns
                = item.city
            div.one.columns
                = item.state
            div.one.columns
                = item.stars
            div.three.columns
                if (item.attributes["By Appointment Only"])
                    = "Yes"
                else
                    = "No"
