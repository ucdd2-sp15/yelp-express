extends layout.jade

// TODO: use the better template from the hackathon
block content
    div.row
        div.five.columns Name
        div.two.columns Open(Y/N)
        div.four.columns By Appointment Only(Y/N) 
    each item in doctors
        div.row
            div.five.columns
               // TODO: fix the hardcoded link
               a(href='/view/doctor/'+item.business_id)
                    = item.name
            div.two.columns
                if item.open
                    |Y
                else
                    |N
            div.four.columns
                if (item.attributes["By Appointment Only"])
                    |Y
                else
                    |N
